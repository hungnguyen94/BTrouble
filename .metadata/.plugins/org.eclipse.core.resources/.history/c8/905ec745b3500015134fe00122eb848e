package Group_24.BubbleTrouble;

public class Bubble {
	private int size;
	private double x;
	private double y;
	
	private double dx;
	private double dy;
	
	private double vx;
	private double vy;
	
	private double ax;
	private double ay;
	
	private final double g = 9.81; 
	
	public Bubble(int size, int x, int y) {
		this.size = size;
		this.x = x;
		this.y = y;
		this.ay = g;
	}

	public int getSize() {
		return size;
	}

	public int getX() {
		return x;
	}

	public int getY() {
		return y;
	}
	
	public int move() {
		vy += ay;
		vx += ax;
		
		
		
		x += dx;
		y += dy;
	}
}
