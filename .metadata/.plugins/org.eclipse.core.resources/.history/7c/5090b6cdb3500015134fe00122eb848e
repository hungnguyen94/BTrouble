package Group_24.BubbleTrouble;

public class Bubble {
	private int size;
	private double x;
	private double y;
	
	private double dx;
	private double dy;
	
	private double vx;
	private double vy;
	
	private double ax;
	private double ay;
	
	private final double g = 0; 
	
	public Bubble(int size, int x, int y) {
		this.size = size;
		this.x = x;
		this.y = y;
		
		this.ay = g;
	}

	public int getSize() {
		return size;
	}

	public double getX() {
		return x;
	}

	public double getY() {
		return y;
	}
	
	public void move() {
		vy += ay;
		vx += ax;
		
		dx = vx;
		dy = vy;
		
		x += dx;
		y += dy;
	}
}
